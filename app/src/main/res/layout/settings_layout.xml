<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:minWidth="300dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="@dimen/dialog_title_text_size"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/vibrationSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vibration Feedback"
            android:checked="true"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aktiviert Vibration beim bedienen von Schaltflächen"
            android:textSize="@dimen/dialog_description_text_size"
            android:textColor="?android:textColorSecondary"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="24dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/pulseAnimationSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pulse Animation"
            android:checked="true"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zeigt Puls-Animation während der letzten 5 Sekunden des Timers"
            android:textSize="@dimen/dialog_description_text_size"
            android:textColor="?android:textColorSecondary"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:dividerHorizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Theme"
            android:textSize="@dimen/dialog_title_text_size"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <RadioGroup
            android:id="@+id/themeRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/lakersTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LA Lakers"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/mavsTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dallas Mavericks"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/celticsTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Boston Celtics"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/warriorsTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Golden State Warriors"/>

            <RadioButton
                android:id="@+id/bullsTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chicago Bulls"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/heatTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Miami Heat"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/netsTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brooklyn Nets"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/sunsTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phoenix Suns"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/bucksTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Milwaukee Bucks"
                android:layout_marginBottom="8dp"/>

            <RadioButton
                android:id="@+id/jazzTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Utah Jazz"/>
        </RadioGroup>

        <Button
            android:id="@+id/createThemeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Custom Theme"
            android:layout_marginTop="16dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:dividerHorizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tips"
            android:textSize="@dimen/dialog_title_text_size"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tipsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dialog_description_text_size"/>

    </LinearLayout>
</ScrollView>